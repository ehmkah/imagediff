<idea-plugin>
  <id>de.ehmkah.projects.imgdiff</id>
  <name>Image Diff</name>
  <vendor email="imgdiff.20.mkrausse@spamgourmet.com" url="http://www.m-krausse.de">m-krausse.de</vendor>

  <description><![CDATA[
     This plugin shows the diff of two images in the diff view.</br>
     This is a very early version of the plugin, not much is working and a lot of crashing.
     I am happy if you report issues, I am going to fix them.
    ]]></description>

  <idea-version since-build="173.0"/>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <action id="ImgDiffAction" class="de.ehmkah.projects.imgdiff.ImgDiffAction" text="Diff Images"
            icon="/icons/imgdiff.svg">
      <add-to-group group-id="Diff.ViewerToolbar"/>
      <keyboard-shortcut first-keystroke="alt F7" keymap="$default"/>
    </action>
  </actions>

</idea-plugin>