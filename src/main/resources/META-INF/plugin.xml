<idea-plugin>
  <id>de.ehmkah.projects.imgdiff</id>
  <name>Image Diff</name>
  <vendor email="imgdiff.20.mkrausse@spamgourmet.com" url="http://www.m-krausse.de">m-krausse.de</vendor>

  <description><![CDATA[
     This plugin shows the diff of two images in the diff view.</br>
     I am happy if you report issues, I am going to fix them.
    ]]></description>

  <idea-version since-build="203"/>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceInterface="com.intellij.diff.DiffManager"
                        serviceImplementation="de.ehmkah.projects.imgdiff.ImgDiffManagerImpl"
                        overrides="true"
    />
  </extensions>

  <actions>
    <action id="MotivateAction" class="de.ehmkah.projects.imgdiff.MotivateAction" text="Motivate Me">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="alt M"/>
    </action>
  </actions>

</idea-plugin>