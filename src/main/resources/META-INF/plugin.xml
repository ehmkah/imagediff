<idea-plugin>
  <id>de.ehmkah.projects.imgdiff</id>
  <name>Image Diff</name>
  <vendor email="imgdiff.20.mkrausse@spamgourmet.com" url="http://www.m-krausse.de">m-krausse.de</vendor>

  <description><![CDATA[
     This plugin shows the diff of two images in the diff view.</br>
     This is a very early version of the plugin, not much is working.
    ]]></description>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <idea-version since-build="173.0"/>

  <!-- uncomment to enable plugin in all products-->
  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <action id="ImgDiffAction" class="de.ehmkah.projects.imgdiff.ImgDiffAction" text="Diff Images"
            icon="Icons.IMG_DIFF">
      <add-to-group group-id="Diff.ViewerToolbar"/>
    </action>
  </actions>

</idea-plugin>